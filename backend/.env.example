# Environment Configuration for Frame Email Client

# Database
DATABASE_URL=sqlite:email_client.db

# JWT Secret (generate a secure random string in production)
JWT_SECRET=your-secret-key-here-change-in-production

# Encryption Key (generate a secure random string in production)
ENCRYPTION_KEY=your-encryption-key-here-change-in-production

# Server Configuration
SERVER_HOST=127.0.0.1
SERVER_PORT=8080

# Logging
RUST_LOG=info

# CORS (comma-separated list of allowed origins)
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# Session Configuration
SESSION_TIMEOUT_DAYS=7

# Email Sync Configuration
EMAIL_SYNC_INTERVAL_SECONDS=300
MAX_EMAILS_PER_SYNC=50

# File Upload Configuration
MAX_ATTACHMENT_SIZE_MB=25
UPLOAD_DIR=./uploads

# Background Tasks
CLEANUP_INTERVAL_HOURS=24
TRASH_RETENTION_DAYS=30
DRAFT_RETENTION_DAYS=90

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL_SECONDS=30
WS_CLIENT_TIMEOUT_SECONDS=60

# Cache Configuration
CACHE_TTL_SECONDS=300
CACHE_MAX_SIZE=1000

# SMTP Configuration (defaults - users will override with their own)
DEFAULT_SMTP_PORT=587
DEFAULT_SMTP_USE_TLS=true

# IMAP Configuration (defaults - users will override with their own)
DEFAULT_IMAP_PORT=993
DEFAULT_IMAP_USE_SSL=true

# Development Mode
DEVELOPMENT_MODE=true